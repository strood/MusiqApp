
<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>
<% button_val = (band.persisted? ? "Update Band" : "Create Band" ) %>


<form class="band-form" action="<%= action %>" method="post">
    <input type="hidden" name="_method" value="<%= method %>">
    <%= auth_token %>

    <p>
      <label for="band_name">Band Name:</label>
      <input type="text" name="band[name]" id="band_name" value="<%= band.name %>">
    </p>
    <br>
    <p>
      <input class="button" type="submit" name="submit" value="<%= button_val %>">
    </p>
</form>
