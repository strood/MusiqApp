
<% content_for :page_header do %>
  <h2 class="page-header">Log In</h2>
<% end %>

<a class="button" href="<%= new_user_url %>">Go to Sign-up</a>

  <%= render "shared/errors" %>

<form class="user-details-form" action="<%= session_url %>" method="post">
    <%= auth_token %>
    <p>
    <label for="user_email">Email:</label>
    <input id="user_email" type="text" name="user[email]" >
    </p>
    <p>
    <label for="user_password">Password:</label>
    <input id="user_password" type="password" name="user[password]">
    </p>

    <p>
    <input class="button" type="submit" value="Log In">
    </p>
</form>
