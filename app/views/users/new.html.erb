<% content_for :page_header do %>
  <h2 class="page-header">Create User</h2>
<% end %>

<a class="button" href="<%= new_session_url %>">Go to Sign-in</a>

<%= render "shared/errors" %>
<%= render "shared/messages" %>

<form class="user-details-form" action="<%= users_url %>" method="post">
    <%= auth_token %>
    <p>
    <label for="user_email">Email:</label>
    <input id="user_email" type="text" name="user[email]" value="<%= @user.email %>">
    </p>
    <p>
    <label for="user_password">Password:</label>
    <input id="user_password" type="password" name="user[password]" value="<%= @user.password %>">
    </p>
    <p>
    <input class="button" type="submit" value="Create User">
    </p>
</form>
